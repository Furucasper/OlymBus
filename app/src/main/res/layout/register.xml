<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <Button
        android:id="@+id/sign_in_btn"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/muli_bold"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/signup_btn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/title_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maven_pro_bold"
        android:text="Sign Up"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <EditText
        android:id="@+id/userID_reg"
        android:layout_width="274dp"
        android:layout_height="47dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_btn_purple_smallcurve"
        android:backgroundTint="#1AA8A8A8"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:paddingLeft="30dp"
        android:hint="User ID"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_register"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/csv_number"
        android:layout_width="274dp"
        android:layout_height="47dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_btn_purple_smallcurve"
        android:backgroundTint="#1AA8A8A8"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:paddingLeft="30dp"
        android:hint="CSV"
        android:inputType="numberPassword"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_number_reg"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/card_number_reg"
        android:layout_width="274dp"
        android:layout_height="47dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_btn_purple_smallcurve"
        android:backgroundTint="#1AA8A8A8"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:paddingLeft="30dp"
        android:hint="Card Number"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/password_reg"
        android:layout_width="274dp"
        android:layout_height="47dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_btn_purple_smallcurve"
        android:backgroundTint="#1AA8A8A8"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:paddingLeft="30dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userID_reg"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="274dp"
        android:layout_height="47dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_btn_purple_smallcurve"
        android:backgroundTint="#1AA8A8A8"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Confirm Password"
        android:paddingLeft="30dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_reg"
        tools:visibility="visible" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_btn_purple_curve"
        android:fontFamily="@font/muli_bold"
        android:text="Sign up"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FDFDFD"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/csv_number" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/muli_extralight_italic"
        android:hint="Already have an account?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_btn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/id_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/password_reg"
        app:layout_constraintEnd_toEndOf="@+id/userID_reg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userID_reg"
        app:layout_constraintTop_toBottomOf="@+id/userID_reg" />

    <TextView
        android:id="@+id/password_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_password"
        app:layout_constraintEnd_toEndOf="@+id/password_reg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/password_reg"
        app:layout_constraintTop_toBottomOf="@+id/password_reg" />

    <TextView
        android:id="@+id/confirm_password_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/card_number_reg"
        app:layout_constraintEnd_toEndOf="@+id/confirm_password"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/confirm_password"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password" />

    <TextView
        android:id="@+id/card_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/csv_number"
        app:layout_constraintEnd_toEndOf="@+id/card_number_reg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/card_number_reg"
        app:layout_constraintTop_toBottomOf="@+id/card_number_reg" />

    <TextView
        android:id="@+id/csv_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#FF0000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/csv_number"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/csv_number"
        app:layout_constraintTop_toBottomOf="@+id/csv_number" />

</androidx.constraintlayout.widget.ConstraintLayout>