<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorWhite">


    <Button
        android:id="@+id/login_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/reg_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_btn_yellow_curve"
        android:fontFamily="@font/muli_bold"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:fontFamily="@font/muli_bold"
        android:text="Register Here"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_above="@id/in_uid"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/olymbus_logo" />

    <EditText
        android:id="@+id/in_uid"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_btn_purple_smallcurve"
        android:ems="10"
        android:layout_centerInParent="true"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorPrimaryDark"
        android:hint="User ID"
        android:inputType="text"
        android:paddingLeft="30dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/in_pwd"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_btn_white_purple_smallcurve"
        android:layout_below="@id/in_uid"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:ems="10"
        android:textSize="20sp"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:paddingLeft="30dp" />

    <Button
        android:id="@+id/forgot_pwd_btn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/in_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/muli_extralight_italic"
        android:text="Forgot password?"
        android:textAllCaps="false"
        android:textColor="@color/colorGray"
        android:textSize="15sp" />

</RelativeLayout>